<div class="card text-center">
  <div class="card-header"></div>
  <div class="card-body">
    <h5 class="card-title">TinyURL for: <%= longURL %></h5>
    <p class="card-text">
      Short URL: <a href="/u/<%= shortURL %>"><%= shortURL %></a>
    </p>
    <p class="card-text">
      Created Date: <%= createDate %>
    </p>
    <p class="card-text">
      Times of visited: <%= visited %>
    </p>
  </div>
  <div class="card-body">
    <h3 class="card-title">Edit</h3>
    <form method="POST" action=<%= "/urls/" + shortURL %>>
      <input type="hidden" name="_method" value="PUT">
      <label for="longURL">New URL:</label>
      <input type="text" name="longURL" placeholder="http://" />
      <button type="submit">Submit</button>
    </form>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ip</th>
        <th scope="col">visits</th>
      </tr>
    </thead>
    <tbody>
      <% for (let ip in ipData) { %>
      <tr>
        <td><%= ip %></td>
        <td><%= ipData[ip] %></td>
      </tr>
      <% } %>
    </tbody>
  </table>

</div>
